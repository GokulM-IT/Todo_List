<%- include('header') -%>

<body>
    <div class="box" id="heading">
        <h1 id="heading"> <%= headTitle %> </h1>
    </div>
    <div class="box">
        <% listItems.forEach(item => { %>
            <form action="/delete" method="post">
                <div class="item"> 
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p> <%= item.name %> </p>
                </div>
                <input type="hidden" name="itemTitle" value="<%= headTitle %>">
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" placeholder="New Item" name="textValue" autocomplete="off"> 
            <button type="submit" name="btn" value="<%= headTitle %>">+</button>
        </form>
    </div>

</body>

<%- include('footer') -%>